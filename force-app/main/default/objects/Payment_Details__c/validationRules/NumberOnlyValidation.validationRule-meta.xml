<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NumberOnlyValidation</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(REGEX(Name, &quot;^[0-9]+$&quot;))</errorConditionFormula>
    <errorDisplayField>Amount_Paid__c</errorDisplayField>
    <errorMessage>Only Numbers Are Allowed</errorMessage>
</ValidationRule>
