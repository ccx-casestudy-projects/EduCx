<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Student_Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone_Number__c ,&quot;[0-9]{10}&quot;))</errorConditionFormula>
    <errorDisplayField>Phone_Number__c</errorDisplayField>
    <errorMessage>Phone number should be maximum of 10 digits only</errorMessage>
</ValidationRule>
